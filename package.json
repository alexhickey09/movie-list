{
    "name": "movielist",
    "type": "module",
    "scripts": {
        "start": "node server/server.js",
        "lint": "eslint client/ server/"
    },
    "devDependencies": {
        "eslint": "^7.11.0",
        "http-server": "^0.12.3"
    },
    "eslintConfig": {
        "env": {
            "browser": true,
            "es2021": true,
            "node": true
        },
        "extends": "eslint:recommended",
        "parserOptions": {
            "ecmaVersion": 12,
            "sourceType": "module"
        },
        "rules": {
            "consistent-return": "error",
            "no-var": "error",
            "eqeqeq": "error",
            "semi": [
                "error",
                "always"
            ],
            "curly": [
                "warn",
                "all"
            ],
            "prefer-const": [
                "warn",
                {}
            ]
        }
    },
    "dependencies": {
        "cors": "^2.8.5",
        "express": "^4.17.1",
        "express-session": "^1.17.1",
        "heroku": "^7.47.0",
        "mongodb": "^3.6.3",
        "node-forge": "^0.10.0",
        "passport": "^0.4.1",
        "passport-local": "^1.0.0"
    }
}
